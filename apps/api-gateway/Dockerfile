# This file is generated by Nx.
# Build the docker image with `npx nx docker:build frontend`.
# Tip: Modify "docker:build" options in project.json to change docker build args.
#
# Run the container with `nx docker:run frontend -p 3000:3000`.
#
FROM docker.io/node:lts-alpine AS build

WORKDIR /app
COPY . .
RUN npm install --legacy-peer-deps
RUN npx nx build api-gateway

# ============================================
# Stage 2: Serve with alpine node
# ============================================
FROM docker.io/node:lts-alpine AS final
WORKDIR /app
COPY --from=build ./app/dist/api-gateway .
RUN npm install --legacy-peer-deps
CMD [ "node", "main.js" ]